<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="io.github.aleksandersh.mysocialnetworkphotos.presentation.signin.SignInFragment">

    <WebView
        android:id="@+id/fragment_sign_in_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/fragment_sign_in_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible" />

    <include
        android:id="@+id/fragment_sign_in_layout_zero_screen"
        layout="@layout/layout_zero_screen"
        android:visibility="gone" />

</FrameLayout>